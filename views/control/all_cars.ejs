<%- include("control") %>

    <div class="row">
        <div class="col-md-12">
            <h2>All Cars</h2>
        </div>
    </div>

    <hr />




    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="bg-color-red">
                    <tr>
                        <th>car ID</th>
                        <th>company</th>
                        <th>color</th>
                        <th>status</th>
                        <th>office</th>
                        <th>model</th>
                        <th>year</th>
                        <th>miles</th>
                        <th>price</th>
                        <th>Licence No</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < cars.length; i++){ %>
                        <tr>
                            <th>
                                <%= cars[i].car_id %>
                            </th>
                            <th>
                                <%= cars[i].company %>
                            </th>
                            <th>
                                <%= cars[i].color %>
                            </th>
                            <th>
                                <%= cars[i].status %>
                            </th>
                            <th>
                                <%= cars[i].office %>
                            </th>
                            <th>
                                <%= cars[i].model %>
                            </th>
                            <th>
                                <%= cars[i].year %>
                            </th>
                            <th>
                                <%= cars[i].miles %>
                            </th>
                            <th>
                                <%= cars[i].price %>
                            </th>
                            <th>
                                <%= cars[i].lic_no %>
                            </th>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <form action="/admin" method="post">
            <div class="orange-button">
                <button name="control_btn" value="add_car" type="submit" class="btn btn-danger square-btn">Add</button>
            </div>
        </form>

        <div class="row">
            <form action="/delete" method="post">
                <select name="car_lic" class="input_field">
                    <option value="">Select car to delete</option>
                    <% for(var i=0; i < cars.length; i++){ %>
                        <option value="<%= cars[i].lic_no %>">
                            <%= cars[i].car_id %> - <%= cars[i].company %> - <%= cars[i].model %>
                                        - <%= cars[i].lic_no %>- <%= cars[i].office %>
                        </option>
                        <% } %>
                </select>
                <br>
                <div class="orange-button" style="float: left !important;">
                    <button name="control_btn" value="delete_car" type="submit"
                        class="btn btn-danger square-btn">Delete</button>
                </div>
            </form>
        </div>
    </div>
    </div>
    <%- include("control_footer") %>