<%- include("control") %>

    <div class="row">
        <div class="col-md-12">
            <h2>All Customers</h2>
        </div>
    </div>

    <hr />




    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="bg-color-red">
                    <tr>
                        <th>Customer ID</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Password</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < customers.length; i++){ %>
                        <tr>
                            <th>
                                <%= customers[i].customer_id %>
                            </th>
                            <th>
                                <%= customers[i].fname %>
                            </th>
                            <th>
                                <%= customers[i].lname %>
                            </th>
                            <th>
                                <%= customers[i].password %>
                            </th>
                            <th>
                                <%= customers[i].email %>
                            </th>
                            <th>
                                <%= customers[i].address %>
                            </th>
                            <th>
                                <%= customers[i].phone %>
                            </th>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <form action="/admin" method="post">
            <div class="orange-button">
                <button name="control_btn" value="add_customer" type="submit"
                    class="btn btn-danger square-btn">Add</button>
            </div>
        </form>
    </div>
    </div>
    <%- include("control_footer") %>