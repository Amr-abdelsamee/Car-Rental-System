<%- include("control") %>

    <div class="row">
        <div class="col-md-12">
            <h2>All Customers</h2>
        </div>
    </div>

    <hr />




    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="bg-color-red">
                    <tr>
                        <th>#</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Customer ID</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < customers.length; i++){ %>
                        <tr>
                            <th>
                                <%= i+1 %>
                            </th>
                            <th>
                                <%= customers[i].fname %>
                            </th>
                            <th>
                                <%= customers[i].lname %>
                            </th>
                            <th>
                                <%= customers[i].email %>
                            </th>
                            <th>
                                <%= customers[i].password %>
                            </th>
                            <th>
                                <%= customers[i].address %>
                            </th>
                            <th>
                                <%= customers[i].phone %>
                            </th>
                            <th>
                                <%= customers[i].customer_id %>
                            </th>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <form action="/admin" method="post">
            <div class="orange-button">
                <button name="control_btn" value="add_customer" type="submit"
                    class="btn btn-danger square-btn">Add</button>
            </div>
        </form>
        <div class="row">
            <form action="/change" method="post">
                <select name="index" class="input_field">
                    <option value="" disabled selected>Customer to delete</option>
                    <% for(var i=0; i < customers.length; i++){ %>
                        <option value="<%= customers[i].customer_id %>">
                            <%= customers[i].customer_id %> - <%= customers[i].fname %> <%= customers[i].lname %>
                                        - <%= customers[i].email %>
                        </option>
                        <% } %>
                </select>
                <br>
                <div class="orange-button" style="float: left !important;">
                    <button name="delete_btn" value="delete_customer" type="submit"
                        class="btn btn-danger square-btn">Delete</button>
                </div>
                <div class="orange-button" style="float: left !important; margin: 0 !important;">
                    <button name="edit_btn" value="edit_customer" type="submit"
                        class="btn btn-danger square-btn">Edit</button>
                </div>
            </form>
        </div>

    </div>
    </div>
    <%- include("control_footer") %>