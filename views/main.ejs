<%- include("header") -%>
    <link href="../css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/main.css" type="text/css">
    <title>Car rental</title>
    </head>

    <body>
        <%- include("nav_bar") -%>
            <div class="vidoe-bg">
                <video autoplay muted loop>
                    <source src="../videos/bg/bmw.mp4" type="video/mp4">
                </video>
            </div>
            
            <div class="main-container">
                <div class="row filters-container">
                <form action="" method="post">
                    <select name="filters" class="input_field filters-input-field">
                        <option value="" disabled selected>pick a filter</option>
                        <option value="filter1">filter 1</option>
                        <option value="filter1">filter 1</option>
                        <option value="filter1">filter 1</option>
                    </select>
                    <button class="filters_btn" name="filters_btn" value="apply_filter" type="submit">Apply</button>
            </form>
                </div>
                <div class="row">
                    <% for(var i=0; i < cars.length; i++){ %>
                        <div class="col-md-3 col-sm-6 col-xs-6">
                            <div class="panel panel-back noti-box">
                                <div class="car-box">
                                    <img class="car-image" src="../images/cars/<%= cars[i].car_id %>.jpg"
                                        alt="car image">
                                        <p class="text-muted car-card-text">location: <%= cars[i].location %></p>
                                    <p class="text-muted car-card-text">
                                        <%= cars[i].company %>
                                            <%= cars[i].model %>
                                    </p>
                                    <p class="text-muted car-card-text" style="background-color:'red';">
                                        <%= cars[i].color %>
                                    </p>
                                    <p class="text-muted car-card-text" style="margin-bottom: 10px; font-weight: 800 !important;">
                                        <%= cars[i].price %>$
                                    </p>
                                    <form action="overview" method="post">
                                        <button class="view-btn" name="car_id_btn" value="<%= cars[i].car_id %>"
                                            type="submit">
                                            view
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% } %>

                </div>
            </div>





            <%- include("footer") %>