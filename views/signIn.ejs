<%- include("header") -%>

    <link rel="stylesheet" href="../css/customer.css" type="text/css">

    <title>Sign In</title>
    </head>

    <body>
        <div class="customer-sign-title">
            <h1>Welcome to the Car Rental Website<h1>
        </div>

        <div class="customer-sign-container">
            <h1>Sign In</h1>
            <form id="form" action="/signin" method="post">
                <p class="signinMessage"></p>
                <input class="input_field" name="username" placeholder="E-mail" autocomplete="off" type="text" required
                    autofocus>
                <input class="input_field" name="password" placeholder="Password" autocomplete="off" type="password"
                    required>
                <br>
                <button class="signBtn" name="btn" value="signup" type="submit">Sign in</button>
                <p>Don't have an account? <a id="log" href="signup">SignUp</a></p>
        </div>
        </form>
    </body>